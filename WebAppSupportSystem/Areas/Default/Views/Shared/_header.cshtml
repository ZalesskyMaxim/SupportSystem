            <div class="quick-links">
                @Html.Partial("~/Areas/Default/Views/Shared/_menu.cshtml")
            </div> <!-- .quick-links -->
        </div> <!-- .cd-search-suggestions -->

        <a href="#0" class="close cd-text-replace">Close Form</a>
    </div> <!-- .cd-main-search -->
</header>
